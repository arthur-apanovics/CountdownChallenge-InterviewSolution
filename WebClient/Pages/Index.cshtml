@page
@model IndexModel
@{
    ViewData["Title"] = "Letters";
}

<div class="game-container">
    <h1 class="display-4 text-center mb-5">Countown - Letters</h1>
    @* ALERTS *@
    <div class="alert-container">
        <div id="alert" class="alert" role="alert" style="display: none;"></div>
    </div>
    @* LETTERS AND STATUS *@
    <div class="row">
        <div class="letter-container d-inline-flex justify-content-center align-items-center m-auto">
            @for (var i = 0; i < 9; i++)
            {
                <div class="letter border"></div>
            }
        </div>
    </div>
    <div class="row justify-content-evenly mt-3">
        <h3>Round: <span id="round">-</span></h3>
        <h3>Score: <span id="score">-</span></h3>
    </div>
    @* GET LETTERS *@
    <div class="row justify-content-center mt-3">
        <button id="btnVowel" class="btn btn-outline-secondary w-25 m-2" data-letter-type="vowel">
            Vowel
        </button>
        <button id="btnConsonant" class="btn btn-outline-dark w-25 m-2" data-letter-type="consonant">
            Consonant
        </button>
    </div>
    @* USER INPUT *@
    <div class="row justify-content-center mt-3">
        <div class="form-group row col-7">
            <label for="guess" class="col-12 col-form-label">
                Answer
            </label>
            <div class="col-10">
                <input
                    id="guess"
                    name="guess"
                    type="text"
                    class="form-control"
                    placeholder="Type your guess here"
                    autocomplete="off"
                    minlength="2"
                    maxlength="9"
                    disabled>
            </div>
            <div class="col-2">
                <button id="submit" class="btn btn-outline-primary" disabled>
                    Submit
                </button>
            </div>
        </div>
    </div>
    @* RESETS *@
    @* TODO: fixed to bottom *@
    <div class="row justify-content-center mt-3">
        <button id="reset" class="btn btn-outline-danger">
            Reset game
        </button>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
// empty
</script>
}